{
	"extends": "@blake.regalia/tsconfig/tsconfig.web.json",

	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"#/*": ["./src/*"],
			"~/*": ["./*"],
		},

		"declaration": true,
		"declarationDir": "dist"
	},

	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"test/**/*.ts",
		"rollup.config.ts"
	]
}